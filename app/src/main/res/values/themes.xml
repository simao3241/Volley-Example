<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.VolleyExample" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.VolleyExample" parent="Base.Theme.VolleyExample" />


    <!-- modal style-->
    <style name="modalStyle" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:padding">@dimen/_10sdp</item>

        <item name="cornerRadius">@dimen/_15sdp</item>
    </style>

    <!-- input layout style-->
    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/_13sdp</item>
    </style>
    <style name="inputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="hintTextAppearance">@style/TextLabel</item>

        <item name="boxCornerRadiusBottomEnd">@dimen/_15sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_15sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_15sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_15sdp</item>

        <item name="boxStrokeColor">#6750A4</item>
        <item name="hintTextColor">#6750A4</item>

        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>

        <item name="errorEnabled">true</item>
    </style>

    <!-- edittext style-->
    <style name="editTextStyle" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_45sdp</item>

        <item name="android:paddingStart">@dimen/_16sdp</item>
        <item name="android:paddingEnd">@dimen/_16sdp</item>

        <!--        <item name="android:textColor">@color/primary_500</item>-->
        <!--        <item name="android:textColorHint">@color/primary_500</item>-->
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

    <!--    button style-->
    <style name="PrimaryButton" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:textColor">#EEE8FF</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">@dimen/_15sdp</item>
    </style>

    <!--    button style-->
    <style name="SecondaryButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="shapeAppearanceOverlay">@style/SecondaryButtonShape</item>
    </style>
    <style name="SecondaryButtonShape" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:textColor">#6750A4</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">@dimen/_15sdp</item>
        <item name="strokeColor">#6750A4</item>
        <item name="strokeWidth">@dimen/_2sdp</item>
    </style>
</resources>